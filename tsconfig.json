{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "sourceMap": true,
      "module": "CommonJS",
      "target": "ES2022",
      "lib": ["ES2022"],
      "allowJs": true,
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "experimentalDecorators": true
    },
    "include": ["./src/**/*", "tests/JavaScriptCompatability.test.js"],
    "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.test.ts"]
  }