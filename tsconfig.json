{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "sourceMap": true,
      "module": "CommonJS",
      "target": "ES2020",
      "lib": ["ES2020"],
      "allowJs": true,
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.test.ts"]
  }